{
  "name": "@packages/api",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./context": {
      "types": "./dist/context.d.ts",
      "default": "./src/context.ts"
    },
    "./routers": {
      "types": "./dist/routers/index.d.ts",
      "default": "./src/routers/index.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:*",
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  },
  "dependencies": {
    "@trpc/server": "catalog:",
    "@trpc/client": "catalog:",
    "hono": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@packages/auth": "workspace:*",
    "@packages/db": "workspace:*"
  }
}
