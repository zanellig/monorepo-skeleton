{
  "name": "@packages/auth",
  "type": "module",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "BETTER_AUTH_TELEMETRY=0 tsdown",
    "auth:generate": "BETTER_AUTH_TELEMETRY=0 pnpx @better-auth/cli generate --output ../db/src/schema/auth.ts --config ./src/index.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:*",
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  },
  "dependencies": {
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@packages/db": "workspace:*"
  }
}
