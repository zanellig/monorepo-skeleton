{
  "name": "@finance-tracker-trpc/auth",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "auth:generate": "pnpx @better-auth/cli generate --output ../db/src/schema/auth.ts --config ./src/index.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@finance-tracker-trpc/db": "workspace:*"
  }
}
