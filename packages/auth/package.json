{
  "name": "@packages/auth",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "development": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "development": "./src/*.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "type": "module",
  "scripts": {
    "build": "BETTER_AUTH_TELEMETRY=0 tsdown",
    "auth:generate": "BETTER_AUTH_TELEMETRY=0 pnpx @better-auth/cli generate --output ../db/src/schema/auth.ts --config ./src/index.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:*",
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@packages/db": "workspace:*"
  }
}
