{
  "extends": "../../packages/typescript-config/tsconfig.backend.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@packages/api": ["../../packages/api/src"],
      "@packages/api/*": ["../../packages/api/src/*"],
      "@packages/auth": ["../../packages/auth/src"],
      "@packages/auth/*": ["../../packages/auth/src/*"],
      "@packages/db": ["../../packages/db/src"],
      "@packages/db/*": ["../../packages/db/src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "references": [
    { "path": "../../packages/api" },
    { "path": "../../packages/auth" },
    { "path": "../../packages/db" }
  ]
}
