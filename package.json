{
  "name": "finance-tracker-trpc",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @finance-tracker-trpc/db db:push",
    "db:studio": "turbo -F @finance-tracker-trpc/db db:studio",
    "db:generate": "turbo -F @finance-tracker-trpc/db db:generate",
    "db:migrate": "turbo -F @finance-tracker-trpc/db db:migrate",
    "auth:generate": "turbo -F @finance-tracker-trpc/auth auth:generate",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bun": "^1.2.6",
    "tsdown": "^0.15.5",
    "turbo": "^2.5.4"
  },
  "packageManager": "pnpm@10.13.1"
}
